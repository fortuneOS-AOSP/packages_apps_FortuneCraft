<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/fortune_pref_ripple">
    <item android:id="@android:id/mask">
        <shape>
            <solid android:color="#FFFFFFFF" />
            <corners
                android:topRightRadius="@dimen/fortune_pref_card_radius"
                android:topLeftRadius="@dimen/fortune_pref_card_radius"
                android:bottomLeftRadius="@dimen/fortune_pref_card_radius"
                android:bottomRightRadius="@dimen/fortune_pref_card_radius" />
        </shape>
    </item>
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/system_accent2_100" />
            <corners
                android:topRightRadius="@dimen/fortune_pref_card_radius"
                android:topLeftRadius="@dimen/fortune_pref_card_radius"
                android:bottomLeftRadius="@dimen/fortune_pref_card_radius"
                android:bottomRightRadius="@dimen/fortune_pref_card_radius" />
        </shape>
    </item>
</ripple>
