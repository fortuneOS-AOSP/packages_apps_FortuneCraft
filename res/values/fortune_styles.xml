<resources>

    <!-- Preference -->
    <style name="fortune_text_primary">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@*android:string/config_headlineFontFamily</item>
    </style>

    <style name="fortune_text_secondary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="fortune_text_primary_medium">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@*android:string/config_headlineFontFamilyMedium</item>
    </style>

    <!-- Dashboard Style -->
    <style name="fortunePreferenceBase">
        <item name="android:layout_marginStart">@dimen/fortune_pref_card_horizontal_padding</item>
        <item name="android:layout_marginEnd">@dimen/fortune_pref_card_horizontal_padding</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="fortunePreferenceTop" parent="fortunePreferenceBase">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@drawable/fortune_pref_card_top</item>
    </style>

    <style name="fortunePreferenceMiddle" parent="fortunePreferenceBase">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:background">@drawable/fortune_pref_card_mid</item>
    </style>

    <style name="fortunePreferenceBottom" parent="fortunePreferenceBase">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@drawable/fortune_pref_card_bot</item>
    </style>

    <style name="fortunePreferenceFull" parent="fortunePreferenceBase">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@drawable/fortune_pref_card_full</item>
    </style>

    <style name="fortune_text_base">
        <item name="android:breakStrategy">simple</item>
    </style>

    <style name="fortune_text_title" parent="@style/fortune_text_base">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@*android:string/config_headlineFontFamilyMedium</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="fortune_text_summary" parent="@style/fortune_text_base">
        <item name="android:textSize">13.0sp</item>
        <item name="android:fontFamily">@*android:string/config_bodyFontFamily</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="fortuneDashboardPrefTop" parent="fortunePreferenceTop">
        <item name="android:layout_marginTop">@dimen/fortune_pref_card_horizontal_padding</item>
    </style>

    <style name="fortuneDashboardPrefBot" parent="fortunePreferenceBottom">
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="fortuneDashboardPrefFull" parent="fortunePreferenceFull">
        <item name="android:layout_marginTop">@dimen/fortune_pref_card_horizontal_padding</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="OptionTitleTextAppearance" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineHeight">15sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>
</resources>
